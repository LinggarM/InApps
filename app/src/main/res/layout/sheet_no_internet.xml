<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/margin_xlarge"
                android:layout_height="@dimen/margin_xlarge"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/no_connection" />

            <TextView
                style="@style/textAppearanceHeadline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="No Connection"
                android:textColor="@color/near_black"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            style="@style/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Tidak ada koneksi internet, silakan periksa koneksi internet Anda"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_xmedium_1"
                android:paddingVertical="@dimen/margin_xsmall"
                android:text="Close"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_coba_lagi"
                style="@style/textAppearanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red_500"
                android:paddingHorizontal="@dimen/margin_xmedium_1"
                android:paddingVertical="@dimen/margin_xsmall"
                android:text="Coba Lagi"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="@dimen/margin_medium" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>